<h1><%= t('.title') %></h1>

<div class="row">
  <% @authors.each do |author| %>
    <div class="col-sm-6 col-lg-4 col-xl-3">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title"><%= author.name %></h5>
          <%= link_to 'Show', author, class: 'btn btn-primary' %>
          <% if policy(author).edit? %>
            <%= link_to 'Edit', edit_author_path(author), class: 'btn btn-warning' %>
            <%= link_to 'Destroy', author, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%== render partial: 'shared/pagination', locals: {pagy: @pagy} %>

