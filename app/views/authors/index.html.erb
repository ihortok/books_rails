<h1><%= t('.title') %></h1>
<%= link_to t('actions.add_record.author'), new_author_path %>

<div class="row">
  <% @authors.each do |author| %>
    <div class="col-sm-6 col-lg-4 col-xl-3">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title"><%= author.name %></h5>
          <%= link_to t('actions.show'), author, class: 'btn btn-primary' %>
          <% if policy(author).edit? %>
            <%= link_to t('actions.edit'), edit_author_path(author), class: 'btn btn-warning' %>
            <%= link_to t('actions.destroy'), author, class: 'btn btn-danger', method: :delete, data: { confirm: t('confirm') } %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @pagy.pages > 1 %>
  <%== render partial: 'shared/pagination', locals: {pagy: @pagy} %>
<% end %>
