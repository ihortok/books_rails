<div class="d-flex align-items-center mb-3">
  <h1 class="mb-0 me-3"><%= t('.title') %></h1>
  <% if user_signed_in? %>
    <%= link_to new_list_path, class: 'btn border border-primary' do %>
      <i class="bi bi-plus-lg"></i>
      <%= t('actions.add_record.list') %>
    <% end %>
  <% end %>
</div>

<div class="row">
  <% @lists.each do |list| %>
    <div class="card mb-4">
      <div class="card-body">
        <%= link_to list.title, list, class: 'fs-4' %>
        <p class="card-text"><%= t('.books_count', count: list.books.count) %></p>
        <%= link_to edit_list_path(list), class: 'btn btn-success', title: :edit do %>
          <i class="bi bi-pencil-square"></i>
        <% end %>
        <%= link_to list, class: 'btn btn-danger', title: :destroy, method: :delete, data: { confirm: t('are_you_sure') } do %>
          <i class="bi bi-trash"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
